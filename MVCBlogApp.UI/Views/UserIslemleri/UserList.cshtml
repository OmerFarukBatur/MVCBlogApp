
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--**********************************
           Content body start
       ***********************************-->
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Danışan Listesi</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Ad Soyad</th>
                                        <th>Email</th>
                                        <th>Telefon</th>
                                        <th>Durumu</th>
                                        <th>Şehir</th>
                                        <th>Oluşturulma Tarihi</th>
                                        <th>Detay Gör</th>
                                        <th>Güncelle</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.NameSurname</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            @if (@item.IsActive)
                                            {
                                                <td>Aktif</td>
                                            }
                                            else
                                            {
                                                <td>Pasif</td>
                                            }
                                            <td>@item.Lacation</td>
                                            <td>@item.CreateDate</td>
                                            <td><a class="btn btn-outline-success" asp-action="GetByIdMembersInformation" asp-controller="UserIslemleri" asp-route-id="@item.Id"><i class="fa fa-eye" aria-hidden="true"> Detay Gör</i></a></td>
                                            <td><a class="btn btn-outline-success" asp-action="UserUpdate" asp-controller="UserIslemleri" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"> Güncelle</i></a></td>
                                            <td><a class="btn btn-outline-danger" asp-action="UserDelete" asp-controller="UserIslemleri" asp-route-id="@item.Id"><i class="fa fa-trash" aria-hidden="true"> Sil</i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
