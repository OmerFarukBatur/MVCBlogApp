
@{
    ViewData["Title"] = "GetByIdLab";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--**********************************
           Content body start
       ***********************************-->
<div class="content-body">

    @*  <div class="row page-titles mx-0">
    <div class="col p-md-0">
    <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
    <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
    </ol>
    </div>
    </div>
    <!-- row -->*@

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide" accept-charset="utf-8" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="title">
                                        Tetkik Talep Başlığı
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="title" name="title" maxlength="250" min="2" value="@Model.Lab.Title" disabled required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="description">
                                        Tetkik Talep Açıklaması
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="description" name="description" maxlength="500" min="2" value="@Model.Lab.Description" disabled required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="labDateTime">
                                        Tetkik İstek Tarihi
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="date" class="form-control dobpicker" id="labDateTime" data-date-format="yyyy-mm-dd" name="labDateTime" value="@Model.Lab.LabDateTime.ToString("yyyy-MM-dd")" disabled required>
                                    </div>
                                </div>                                
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="title">
                                        Diyetisyen Adı
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="title" name="title" maxlength="250" min="2" value="@Model.Lab.UserName" disabled required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="examinationId">
                                        İstenen Tetkikler
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control" id="examinationId" name="examinationId" multiple required disabled>
                                            <option>Seçiniz!</option>
                                            @foreach (var item in Model.Examinations)
                                            {
                                                if (item.Selected == true)
                                                {
                                                    <option value="@item.Id" selected disabled>@item.ExaminatioName</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->

<script>
    jQuery(document).ready(function () {
        $('.dobpicker').datepicker({
            autoclose: true,
        });
</script>