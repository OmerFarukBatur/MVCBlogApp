
@{
    ViewData["Title"] = "MemberAppointmentList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--**********************************
           Content body start
       ***********************************-->
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Danışan Randevu Listesi</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Randevu Tarihi</th>
                                        <th>Diyetisten Adı</th>
                                        <th>Danışan Adı</th>
                                        <th>Başlık</th>
                                        <th>Açıklama</th>
                                        <th>Ücret</th>
                                        <th>Rapor</th>
                                        <th>Durumu</th>
                                        <th>Kayıt Tarihi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.AppointmentDate</td>
                                            <td>@item.UserName</td>
                                            <td>@item.MemeberName</td>
                                            <td>@item.Subject</td>
                                            <td>@item.Description</td>
                                            <td>@item.Price</td>
                                            <td><a class="btn btn-outline-success" asp-action="MemberAppointmentDetail" asp-controller="UserIslemleri" asp-route-id="@item.Id"><i class="fa fa-pencil"> Tetkikler</i></a></td>
                                            <td>@item.StatusName</td>
                                            <td>@item.CreateDate</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
