
@{
    ViewData["Title"] = "AppointmentDetailCreate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--**********************************
           Content body start
       ***********************************-->
<div class="content-body">

    @*  <div class="row page-titles mx-0">
    <div class="col p-md-0">
    <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
    <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
    </ol>
    </div>
    </div>
    <!-- row -->*@

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide" method="post" asp-controller="DoctorReportProccess" asp-action="AppointmentDetailCreate" accept-charset="utf-8" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="membersId">
                                        Danışan <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control" id="membersId" name="membersId" required>
                                            <option>Seçiniz!</option>
                                            @foreach (var item in Model.Members)
                                            {
                                                <option value="@item.Id">@item.NameSurname</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="userId">
                                        Doktor <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control" id="userId" name="userId" required>
                                            <option>Seçiniz!</option>
                                            @foreach (var item in Model.Admins)
                                            {
                                                <option value="@item.Id">@item.Username - @item.AuthName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="diagnosis">
                                        Teşhis <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6 ">
                                        <textarea class="summernote" id="diagnosis" name="diagnosis" required> 
                                            Deneme
                                        </textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="history">
                                        Hasta Hikayesi <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6 ">
                                        <textarea class="summernote" id="history" name="history" required> 
                                            Deneme
                                        </textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="treatment">
                                        Tedavi/Çözüm <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6 ">
                                        <textarea class="summernote" id="treatment" name="treatment" required> 
                                            Deneme
                                        </textarea>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="appointmentId">
                                        Danışan Randevu <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control" id="appointmentId" name="appointmentId" required>
                                            <option>Seçiniz!</option>
                                            @foreach (var item in Model.D_Appointments)
                                            {
                                                <option value="@item.Id">@item.Id - @item.Subject</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="weight">
                                        Kilo <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="number" class="form-control" id="weight" min="0" max="1000" name="weight" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="size">
                                        Boy <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="number" class="form-control" id="size" name="size" min="0" max="600" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="oilRate">
                                        Yağ Oranı <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="number" class="form-control" id="oilRate" min="0" max="100" name="oilRate" required>
                                    </div>
                                </div>                                
                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-primary">Kaydet</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
