
@{
    ViewData["Title"] = "BannerList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--**********************************
           Content body start
       ***********************************-->
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Banner Listesi</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Başlık</th>
                                        <th>Banner Sırası</th>
                                        <th>Dil</th>
                                        <th>Durumu</th>
                                        <th>Seminer Görseli</th>
                                        <th>Güncelle</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.BannerName</td>
                                            <td>@item.BannerOrder</td>
                                            <td>@item.Language</td>
                                            <td>@item.StatusName</td>
                                            <td><img width="50" height="50" src="@Url.Content("~/Upload/"+@item.BannerUrl)"></td>
                                            <td><a class="btn btn-outline-success" asp-action="BannerUpdate" asp-controller="File" asp-route-id="@item.Id"><i class="fa fa-pencil"> Güncelle</i></a></td>
                                            <td><a class="btn btn-outline-danger" asp-action="BannerDelete" asp-controller="File" asp-route-id="@item.Id"><i class="fa fa-trash"> Sil</i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
