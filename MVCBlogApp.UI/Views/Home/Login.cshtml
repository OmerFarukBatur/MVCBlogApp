@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-form-bg h-100">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-xl-6">
                <div class="form-input-content">
                    <div class="card login-form mb-0">
                        <div class="card-body pt-5">

                            <a class="text-center" href="index.html"> <h4>Giriş Yap</h4></a>

                            <form class="mt-5 mb-5 login-input" method="post">
                                <div class="form-group">
                                    <input type="email" class="form-control" name="email" placeholder="Email" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" name="password" placeholder="Şifre" required>
                                </div>
                                <button class="btn login-form__btn submit w-100" type="submit">Giriş Yap</button>
                            </form>
                            <p class="mt-5 login-form__footer">Hesabınız yoksa şimdi <a asp-controller="Home" asp-action="Index" class="text-primary">Kayıt Ol </a> </p>
                            <p class="mt-5 login-form__footer">Şifrenizi hatırlamıyorsanız şimdi <a asp-controller="Home" asp-action="PasswordReset" class="text-primary">Sıfırlayın </a> </p>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>