@model MVCBlogApp.Application.ViewModels.VM_Book
@using MVCBlogApp.Application.Abstractions.Services;
@inject IOperationService OperationService
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_UILayout.cshtml";

    string orderNo = (string)TempData["orderNo"];
    int? parentID = (int)TempData["parentID"];
    int? internalID = (int)TempData["internalID"];

    int LangID = OperationService.SessionLangId();
    if (LangID == 1) { ViewData["Title"] = "KİTAPLAR"; } else if (LangID == 2) { ViewData["Title"] = "BOOKS"; }
}



@if (LangID == 2)

{

    <section id="page-title" class="page-title-mini">

        <div class="container clearfix">
            <h1>TAYLAN KÜMELİ KİTAPLAR</h1>

            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="#">@Model.BookName</a></li>

            </ol>
        </div>

    </section>


}
else
{
    <section id="page-title" class="page-title-mini">

        <div class="container clearfix">
            <h1>TAYLAN KÜMELİ KİTAPLAR</h1>

            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="#">@Model.BookName</a></li>

            </ol>
        </div>

    </section>

}
<section id="content">
    <div class="content-wrap">
        <div class="container clearfix">
            <div class="row gutter-40 col-mb-80">


                <div class="postcontent col-lg-9 order-lg-last">

                    <div class="single-post mb-0">

                        <!-- Single Post
                        ============================================= -->
                        <div class="entry clearfix">

                            <!-- Entry Title
                            ============================================= -->

                            <div class="fancy-title title-bottom-border">
                                <h2><i class="icon-book"></i> @Model.BookName</h2>
                            </div>
                            <div class="entry-content mt-0">


                                <p>@Html.Raw(Model.Content)</p>




                                <!-- Post Single - Content End -->
                                <!-- Tag Cloud
                                ============================================= -->
                                <div class="tagcloud clearfix bottommargin">

                                    @*@foreach (var item in Model.X_BookCategories.Where(x=>x.BookID==Model.ID))
                                    {
                                    @item.BookCategoryID
                                    }*@

                                </div><!-- .tagcloud end -->

                                <div class="clear"></div>



                                <!-- Post Single - Share
                                ============================================= -->
                                <div class="si-share border-0 d-flex justify-content-between align-items-center">
                                    <span>Bu yazıyı paylaş:</span>
                                    <div>
                                        <a href="#" class="social-icon si-borderless si-whatsapp">
                                            <i class="icon-whatsapp"></i>
                                            <i class="icon-whatsapp"></i>
                                        </a>
                                        <a href="#" class="social-icon si-borderless si-facebook">
                                            <i class="icon-facebook"></i>
                                            <i class="icon-facebook"></i>
                                        </a>
                                        <a href="#" class="social-icon si-borderless si-twitter">
                                            <i class="icon-twitter"></i>
                                            <i class="icon-twitter"></i>
                                        </a>
                                        <a href="#" class="social-icon si-borderless si-pinterest">
                                            <i class="icon-pinterest"></i>
                                            <i class="icon-pinterest"></i>
                                        </a>
                                        <a href="#" class="social-icon si-borderless si-email3">
                                            <i class="icon-email3"></i>
                                            <i class="icon-email3"></i>
                                        </a>
                                    </div>
                                </div><!-- Post Single - Share End -->

                            </div>
                        </div><!-- .entry end -->
                    </div>

                </div>



                @await Component.InvokeAsync("UILeftNavigation", new { orderNo, parentID })



            </div>
        </div>
    </div>
</section><!-- #content end -->