
@{
    ViewData["Title"] = "MemberByIdAppointmentDetail";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--**********************************
           Content body start
       ***********************************-->
<div class="content-body">

    @*  <div class="row page-titles mx-0">
    <div class="col p-md-0">
    <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
    <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
    </ol>
    </div>
    </div>
    <!-- row -->*@

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide" method="get" accept-charset="utf-8" enctype="multipart/form-data">
                                
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="userId">
                                        Diyetisyen <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="userId" name="userId" value="@Model.D_Appointment.UserName" disabled>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="appointmentDate">
                                        Randevu Tarihi <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="date" class="form-control dobpicker" id="appointmentDate" name="appointmentDate" placeholder="Gün/Ay/Yıl" data-date-format="yyyy-MM-dd" value="@Model.D_Appointment.AppointmentDate.ToString("yyyy-MM-dd")" disabled>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="appointmentTime">
                                        Randevu Saati <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="time" class="form-control dobpicker" id="appointmentTime" name="appointmentTime" value="@Model.D_Appointment.AppointmentDate.TimeOfDay" disabled>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="price">
                                        Ücret <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="number" class="form-control" id="price" name="price" min="0" value="@Model.D_Appointment.Price.ToString().Replace(",00","")" disabled>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="subject">
                                        Konu <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="subject" maxlength="250" min="2" name="subject" value="@Model.D_Appointment.Subject" disabled>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="description">
                                        Açıklama <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="description" name="description" value="@Model.D_Appointment.Description" disabled>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="statusId">
                                        Durumu <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="statusId" name="statusId" value="@Model.D_Appointment.StatusName" disabled>
                                    </div>
                                </div>                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->

<script>
    jQuery(document).ready(function () {
        $('.dobpicker').datepicker({
            autoclose: true,
        });
</script>