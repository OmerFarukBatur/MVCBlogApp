
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-body">

    <div class="container-fluid mt-3">
        <div class="row">            
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-2">
                    <div class="card-body">
                        <h3 class="card-title text-white">Aktif Randevu Sayısı</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">@Model.ActiveAllActivityCount</h2>
                        </div>
                        <span class="float-right display-5 opacity-5"><i class="fa fa-calendar"></i></span>
                    </div>
                </div>
            </div>
        </div>

        <!--Appointment -->

        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-12">
                        <div class="card">

                            <div class="card-body">
                                <h4 class="card-title">Son 1 Hafta İçinde Olan Randevular</h4>
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered zero-configuration">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Randevu Tarihi</th>
                                                <th>Diyetisten Adı</th>
                                                <th>Danışan Adı</th>
                                                <th>Başlık</th>
                                                <th>Açıklama</th>
                                                <th>Ücret</th>
                                                <th>Durumu</th>
                                                <th>Kayıt Tarihi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in @Model.ActiveLastWeekAppointment)
                                            {
                                                <tr>
                                                    <td>@item.Id</td>
                                                    <td>@item.AppointmentDate</td>
                                                    <td>@item.UserName</td>
                                                    <td>@item.MemeberName</td>
                                                    <td>@item.Subject</td>
                                                    <td>@item.Description</td>
                                                    <td>@item.Price</td>
                                                    <td>@item.StatusName</td>
                                                    <td>@item.CreateDate</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--Appointment End -->
        <!--Event -->

        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-12">
                        <div class="card">

                            <div class="card-body">
                                <h4 class="card-title">Son 1 İçinde Olan Aktif Etkinlikler</h4>
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered zero-configuration">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Başlık</th>
                                                <th>Etkinlik Kategori Adı</th>
                                                <th>Başlangıç Tarihi</th>
                                                <th>Bitiş Tarihi</th>
                                                <th>Durum</th>
                                                <th>Kayıt Tarihi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in @Model.ActiveOneWeekActivities)
                                            {
                                                <tr>
                                                    <td>@item.Id</td>
                                                    <td>@item.Title</td>
                                                    <td>@item.EventCategoryName</td>
                                                    <td>@item.StartDatetime</td>
                                                    <td>@item.FinishDatetime</td>
                                                    <td>@item.StatusName</td>
                                                    <td>@item.CreateDate</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--Event End -->

    </div>
    <!-- #/ container -->
</div>
