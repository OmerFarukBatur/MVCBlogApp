@model IEnumerable<MVCBlogApp.Application.ViewModels.VM_Blog>

@if (Model.Count() > 0)
{
    <h4>Benzer Konular:</h4>
    <div class="related-posts row align-items-center col-mb-30">
        @foreach (var item in Model)
        {
            <div class="entry col-12 col-md-6">
                <div class="grid-inner row align-items-center gutter-20">
                    <div class="col-4">
                        <div class="entry-image">
                            <a href="#"><img src="/Upload/@item.CoverImgUrl" alt=""></a>
                        </div>
                    </div>
                    <div class="col-8">
                        <div class="entry-title title-xs">
                            <h3><a href="@item.UrlRoot">@item.SubTitle</a></h3>
                        </div>
                        <div class="entry-meta">
                            <ul>
                                <li><a href="@item.UrlRoot"> Devamını Oku</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}