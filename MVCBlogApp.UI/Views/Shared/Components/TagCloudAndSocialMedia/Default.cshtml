@model IEnumerable<MVCBlogApp.Application.ViewModels.VM_BlogCategory>
@using MVCBlogApp.Application.Abstractions.Services;
@inject IOperationService OperationService

@{
    int LangID = OperationService.SessionLangId();
}

<!-- Tag Cloud
                                        ============================================= -->
<div class="tagcloud clearfix bottommargin">
    @foreach (var item in Model)
    {
        <a asp-action="Search" asp-controller="UIHome" asp-route-q="@item.CategoryName.Trim()">@item.CategoryName</a>

    }
