
@{
    ViewData["Title"] = "EventUpdate";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--**********************************
           Content body start
       ***********************************-->
<div class="content-body">

    @*  <div class="row page-titles mx-0">
    <div class="col p-md-0">
    <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
    <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
    </ol>
    </div>
    </div>
    <!-- row -->*@

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">
                            <form class="form-valide" method="post" asp-controller="Admin" asp-action="EventUpdate" accept-charset="utf-8" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="title">
                                        Başlık <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="title" name="title" maxlength="250" min="2" value="@Model.Event.Title" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="description">
                                        Açıklama
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" id="description" name="description" value="@Model.Event.Description">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="startDatetime">
                                        Başlangıç Tarihi ve Saati <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-3">
                                        <input type="date" class="form-control dobpicker" id="startDate" name="startDate" placeholder="Gün/Ay/Yıl" data-date-format="yyyy-mm-dd" value="@Model.Event.StartDatetime.ToString("yyyy-MM-dd")" required>
                                    </div>
                                    <div class="col-lg-3">
                                        <input type="time" class="form-control dobpicker" id="startTime" name="startTime" value="@Model.Event.StartDatetime.TimeOfDay" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="finishDatetime">
                                        Bitiş Tarihi ve Saati <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-3">
                                        <input type="date" class="form-control dobpicker" id="finishDate" name="finishDate" placeholder="Gün/Ay/Yıl" value="@Model.Event.FinishDatetime.ToString("yyyy-MM-dd")" required>
                                    </div>
                                    <div class="col-lg-3">
                                        <input type="time" class="form-control dobpicker" id="finishTime" name="finishTime" value="@Model.Event.FinishDatetime.TimeOfDay" required>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="eventCategoryId">
                                        Etkinlik Kategorisi <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control" id="eventCategoryId" name="eventCategoryId" required>
                                            <option value="@Model.Event.EventCategoryId">Seçiniz!</option>
                                            @foreach (var item in Model.EventCategories)
                                            {
                                                <option value="@item.Id">@item.EventCategoryName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-4 col-form-label" for="statusId">
                                        Durumu <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <select class="form-control" id="statusId" name="statusId" required>
                                            <option value="@Model.Event.StatusId">Seçiniz!</option>
                                            @foreach (var item in Model.Statuses)
                                            {
                                                <option value="@item.Id">@item.StatusName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-8 ml-auto">
                                        <button type="submit" class="btn btn-primary">Kaydet</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
<script>
    jQuery(document).ready(function () {
        $('.dobpicker').datepicker({
            autoclose: true,
        });
</script>