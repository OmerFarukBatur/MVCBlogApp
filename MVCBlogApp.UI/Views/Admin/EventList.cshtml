
@{
    ViewData["Title"] = "EventList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--**********************************
           Content body start
       ***********************************-->
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Etkinlik Listesi</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Başlık</th>
                                        <th>Etkinlik Kategori Adı</th>
                                        <th>Başlangıç Tarihi</th>
                                        <th>Bitiş Tarihi</th>
                                        <th>Durum</th>
                                        <th>Kayıt Tarihi</th>
                                        <th>Güncelle</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Title</td>
                                            <td>@item.EventCategoryName</td>
                                            <td>@item.StartDatetime</td>
                                            <td>@item.FinishDatetime</td>
                                            <td>@item.StatusName</td>
                                            <td>@item.CreateDate</td>
                                            <td><a class="btn btn-outline-success" asp-action="EventUpdate" asp-controller="Admin" asp-route-id="@item.Id"><i class="fa fa-pencil"> Güncelle</i></a></td>
                                            <td><a class="btn btn-outline-danger" asp-action="EventDelete" asp-controller="Admin" asp-route-id="@item.Id"><i class="fa fa-trash"> Sil</i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
