@using MVCBlogApp.Application.Abstractions.Services;
@using Microsoft.AspNetCore.Http;
@inject IOperationService OperationService

@{
    Layout = "~/Views/Shared/_UILayout.cshtml";
    ViewData["Title"] = "Ana Sayfa";

    int LangID = OperationService.SessionLangId();
}


<section id="content">
    <div class="content-wrap">

        <div class="container clearfix">

            <div class="row">
                <div class="col-lg-8 bottommargin">
                    <div class="row col-mb-50">

                        @await Component.InvokeAsync("UIHomeSlider")

                        @await Component.InvokeAsync("UIHomeArticlePreviews")

                    </div>

                </div>

                <div class="col-lg-4">

                    <div class="line d-block d-lg-none"></div>

                    <div class="sidebar-widgets-wrap clearfix">

                        @await Component.InvokeAsync("UIHomeRightVideo")

                        <div class="widget clearfix">
                            @*Kendinizi Test Edin*@

                            @await Component.InvokeAsync("UIHomeCalcTests")

                        </div>
                    </div>

                </div>
            </div>


            <div class="row">
                @*Güncel Haberler*@
                @await Component.InvokeAsync("UIHomeLatestNews")

            </div>

        </div>
    </div>
</section><!-- #content end -->
