
@{
    ViewData["Title"] = "WSAFList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--**********************************
           Content body start
       ***********************************-->
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Seminer Başvuru Listesi</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Ad Soyad</th>
                                        <th>Email</th>
                                        <th>İş</th>
                                        <th>Katılım Amacı</th>
                                        <th>Kayıt Tarihi</th>
                                        <th>Detay Görüntüle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.NameSurname</td>
                                            <td>@item.Email</td>
                                            <td>@item.Job</td>
                                            <td>@item.AttendancePurpose</td>
                                            <td>@item.CreateDateTime</td>
                                            <td><a class="btn btn-outline-success" asp-action="WSAFDetail" asp-controller="Workshop" asp-route-id="@item.Id"><i class="fa fa-eye"> Detayı Görüntüle</i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
