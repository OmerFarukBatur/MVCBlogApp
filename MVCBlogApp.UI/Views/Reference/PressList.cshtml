
@{
    ViewData["Title"] = "PressList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--**********************************
           Content body start
       ***********************************-->
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Tüm Yayın Listesi</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Başlık</th>
                                        <th>Özet</th>
                                        <th>Tip</th>
                                        <th>Gazete</th>
                                        <th>Dil</th>
                                        <th>Durumu</th>
                                        <th>Kayıt Tarihi</th>
                                        <th>Haber Görseli</th>
                                        <th>Güncelle</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Title</td>
                                            <td>@item.SubTitle</td>
                                            <td>@item.PressTypeName</td>
                                            <td>@item.NewsPaperName</td>
                                            <td>@item.Language</td>
                                            <td>@item.StatusName</td>
                                            <td>@item.CreateDate</td>
                                            <td><img width="50" height="50" src="@Url.Content("~/Upload/"+@item.ImageUrl)"></td>
                                            <td><a class="btn btn-outline-success" asp-action="PressUpdate" asp-controller="Reference" asp-route-id="@item.Id"><i class="fa fa-pencil"> Güncelle</i></a></td>
                                            <td><a class="btn btn-outline-danger" asp-action="PressDelete" asp-controller="Reference" asp-route-id="@item.Id"><i class="fa fa-trash"> Sil</i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
