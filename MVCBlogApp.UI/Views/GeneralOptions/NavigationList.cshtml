
@{
    ViewData["Title"] = "NavigationList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--**********************************
           Content body start
       ***********************************-->
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Navigation Listesi</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Parent Id</th>
                                        <th>Order No</th>
                                        <th>IsHeader</th>
                                        <th>IsSubHeader</th>
                                        <th>MetaTitle</th>
                                        <th>MetaKey</th>
                                        <th>UrlRoot</th>
                                        <th>NavigationName</th>
                                        <th>Controller</th>
                                        <th>Action</th>
                                        <th>FontAwesomeIcon</th>
                                        <th>IsActive</th>
                                        <th>Language</th>
                                        <th>Type</th>
                                        <th>IsAdmin</th>
                                        <th>CreateDate</th>
                                        <th>Güncelle</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.ParentId</td>
                                            <td>@item.OrderNo</td>
                                            <td>@item.IsHeader</td>
                                            <td>@item.IsSubHeader</td>
                                            <td>@item.MetaTitle</td>
                                            <td>@item.MetaKey</td>
                                            <td>@item.UrlRoot</td>
                                            <td>@item.NavigationName</td>
                                            <td>@item.Controller</td>
                                            <td>@item.Action</td>
                                            <td>@item.FontAwesomeIcon</td>
                                            @if (@item.IsActive)
                                            {
                                               <td>Aktif</td> 
                                            }else
                                            {
                                            <td>Pasif</td>
                                            }
                                            <td>@item.Language</td>
                                            <td>@item.Type</td>
                                            <td>@item.IsAdmin</td>
                                            <td>@item.CreateDate</td>
                                            <td><a class="btn btn-outline-success" asp-action="NavigationUpdate" asp-controller="GeneralOptions" asp-route-id="@item.Id"><i class="fa fa-pencil"> Güncelle</i></a></td>
                                            <td><a class="btn btn-outline-danger" asp-action="NavigationDelete" asp-controller="GeneralOptions" asp-route-id="@item.Id"><i class="fa fa-trash"> Sil</i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
