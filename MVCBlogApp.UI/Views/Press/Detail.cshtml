@model MVCBlogApp.Application.ViewModels.VM_Press
@using MVCBlogApp.Application.Abstractions.Services;
@inject IOperationService OperationService

@{
    int LangID = OperationService.SessionLangId();
    if ( LangID == 1) { ViewData["Title"] = "Medya Yansimalari"; } else if (LangID == 2) { ViewData["Title"] = "Media Images"; }
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


@if (LangID == 2)
{
    <section id="page-title" class="page-title-mini">

        <div class="container clearfix">
            <h1>TAYLAN KÜMELİ Media Images</h1>

            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Main Page</a></li>
                <li class="breadcrumb-item"><a href="/media-images">Media Images</a></li>

            </ol>
        </div>

    </section>
    <section id="content">
        <div class="content-wrap">
            <div class="container clearfix">

                <div class="row gutter-40 col-mb-80">
                    <div class="postcontent col-lg-9 order-lg-last">
                        <div class="fancy-title title-bottom-border"><h1>@Model.Title</h1></div>



                        <div id="posts" class="post-grid row grid-container gutter-30" data-layout="fitRows">

                            <p class="single-post mb-0">

                                @Html.Raw(Model.Description)
                            </p>

                        </div>

                        <hr />

                        <br />

                        <a href="@Model.UrlLink" target="_blank" class="badge badge-success">@Model.NewsPaperName</a>
                        <div class="badge badge-dark"> @Model.PressTypeName</div>

                    </div>

                    <div class="sidebar col-lg-3">

                        @await Component.InvokeAsync("UIHomeSLeftNavigation")

                    </div>
                </div>

            </div>
        </div>
    </section>
}
else

{
    <section id="page-title" class="page-title-mini">

        <div class="container clearfix">
            <h1>TAYLAN KÜMELİ MEDYA YANSIMALARI</h1>

            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">ANA SAYFA</a></li>
                <li class="breadcrumb-item"><a href="/medya-yansimalari">MEDYA YANSIMALARI</a></li>

            </ol>
        </div>

    </section>
    <section id="content">
        <div class="content-wrap">
            <div class="container clearfix">

                <div class="row gutter-40 col-mb-80">
                    <div class="postcontent col-lg-9 order-lg-last">
                        <div class="fancy-title title-bottom-border"><h1>@Model.Title</h1></div>



                        <div id="posts" class="post-grid row grid-container gutter-30" data-layout="fitRows">

                            <p class="single-post mb-0">

                                @Html.Raw(Model.Description)
                            </p>

                        </div>

                        <hr />

                        <br />

                        <a href="@Model.UrlLink" target="_blank" class="badge badge-success">@Model.NewsPaperName</a>
                        <div class="badge badge-dark"> @Model.PressTypeName</div>

                    </div>

                    <div class="sidebar col-lg-3">

                        @await Component.InvokeAsync("UIHomeSLeftNavigation")

                    </div>
                </div>

            </div>
        </div>
    </section>

}